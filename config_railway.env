# Railway Production Environment Configuration
# Скопируйте эти переменные в Railway Dashboard > Variables

# TELEGRAM BOT CONFIGURATION (ОБЯЗАТЕЛЬНО!)
TG_BOT_TOKEN=${{TG_BOT_TOKEN}}
TG_WEBHOOK_URL=${{RAILWAY_PUBLIC_DOMAIN}}/webhook
TG_WEBHOOK_SECRET=${{TG_WEBHOOK_SECRET}}
TG_ADMIN_IDS=${{TG_ADMIN_IDS}}

# DATABASE CONFIGURATION - Railway PostgreSQL
DATABASE_URL=${{DATABASE_URL}}
DATABASE_ECHO=false

# REDIS CONFIGURATION - Railway Redis
REDIS_URL=${{REDIS_URL}}
REDIS_ENCODING=utf-8
REDIS_DECODE_RESPONSES=true

# SECURITY CONFIGURATION (ОБЯЗАТЕЛЬНО!)
SECURITY_ENCRYPTION_KEY=${{SECURITY_ENCRYPTION_KEY}}
SECURITY_JWT_SECRET=${{SECURITY_JWT_SECRET}}

# APPLICATION CONFIGURATION
ENVIRONMENT=production
DEBUG=false

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FORMAT=json

# WILDBERRIES API CONFIGURATION
WB_BASE_URL=https://suppliers-api.wildberries.ru
WB_TIMEOUT=30
WB_MAX_RETRIES=3
WB_RATE_LIMIT_DELAY=60

# MONITORING CONFIGURATION
MONITORING_DEFAULT_INTERVAL_SEC=30
MONITORING_MAX_API_KEYS_PER_USER=5
MONITORING_TRIAL_BOOKINGS_LIMIT=2

# PAYMENT CONFIGURATION (YooKassa)
PAYMENT_YOOKASSA_SHOP_ID=${PAYMENT_YOOKASSA_SHOP_ID}
PAYMENT_YOOKASSA_SECRET_KEY=${PAYMENT_YOOKASSA_SECRET_KEY}
PAYMENT_WEBHOOK_URL=${RAILWAY_PUBLIC_DOMAIN}/webhook/payment
PAYMENT_WEBHOOK_SECRET=${PAYMENT_WEBHOOK_SECRET}
PAYMENT_CURRENCY=RUB
PAYMENT_BOOKING_COST=10.0
PAYMENT_MIN_DEPOSIT_AMOUNT=500.0
PAYMENT_MAX_DEPOSIT_AMOUNT=50000.0
PAYMENT_ENABLED=true
PAYMENT_TEST_MODE=false

# RAILWAY SPECIFIC
PORT=8080
HOST=0.0.0.0
