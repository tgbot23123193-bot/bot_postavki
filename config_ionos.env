# WB Auto-Booking Bot Configuration for Ionos Ubuntu
# Замените все плейсхолдеры на реальные значения!

# TELEGRAM BOT CONFIGURATION (ОБЯЗАТЕЛЬНО!)
TG_BOT_TOKEN=ВСТАВЬТЕ_СЮДА_ВАШ_РЕАЛЬНЫЙ_ТОКЕН_ОТ_BOTFATHER
TG_WEBHOOK_URL=https://your-domain.com/webhook
TG_WEBHOOK_SECRET=your_webhook_secret_here_32_chars
TG_ADMIN_IDS=your_telegram_user_id_here

# DATABASE CONFIGURATION (PostgreSQL для продакшена)
# Замените на ваши реальные данные PostgreSQL на Ionos
DATABASE_URL=postgresql://username:password@localhost:5432/wb_bot_prod
DATABASE_ECHO=false

# REDIS CONFIGURATION (Установите Redis на сервере)
REDIS_URL=redis://localhost:6379/0
REDIS_ENCODING=utf-8
REDIS_DECODE_RESPONSES=true

# SECURITY CONFIGURATION (ОБЯЗАТЕЛЬНО!)
# Сгенерируйте новые ключи для продакшена!
SECURITY_ENCRYPTION_KEY=your_32_character_encryption_key_here
SECURITY_JWT_SECRET=your_jwt_secret_key_here_32_chars

# PAYMENT CONFIGURATION (Отключено по умолчанию)
PAYMENT_ENABLED=false
PAYMENT_TEST_MODE=false
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret
PAYMENT_YOOKASSA_SECRET_KEY=your_yookassa_secret_key
PAYMENT_YOOKASSA_SHOP_ID=your_yookassa_shop_id

# REDISTRIBUTION CONFIGURATION
# Периоды активного бронирования (каждую минуту)
REDISTRIBUTION_BOOKING_PERIODS=8:55-9:10,9:55-10:10
# Интервал между попытками ВНЕ периодов (в минутах)
REDISTRIBUTION_RETRY_MINUTES=31
# Интервал между попытками В периодах (в минутах)
REDISTRIBUTION_ACTIVE_RETRY_MINUTES=1
# Автоматический повтор при неудаче
REDISTRIBUTION_AUTO_RETRY=true
# Максимальное количество попыток
REDISTRIBUTION_MAX_ATTEMPTS=100

# APPLICATION CONFIGURATION
ENVIRONMENT=production
DEBUG=false

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FORMAT=json

# WILDBERRIES API CONFIGURATION
WB_BASE_URL=https://suppliers-api.wildberries.ru
WB_TIMEOUT=30
WB_MAX_RETRIES=3
WB_RATE_LIMIT_DELAY=60

# MONITORING CONFIGURATION
MONITORING_DEFAULT_INTERVAL_SEC=30
MONITORING_MAX_API_KEYS_PER_USER=5
MONITORING_TRIAL_BOOKINGS_LIMIT=2

# WEB SERVER CONFIGURATION (для Ubuntu)
HOST=0.0.0.0
PORT=8000
