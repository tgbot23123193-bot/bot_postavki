{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python -m wb_bot.app.main",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "always"
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "DEBUG": "false",
        "PYTHONPATH": "/app",
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUNBUFFERED": "1"
      }
    }
  },
  "resources": {
    "cpu": 1000,
    "memory": 512,
    "storage": 1
  },
  "regions": ["eu-west-1"],
  "plugins": [
    {
      "name": "postgresql",
      "plan": "hobby"
    },
    {
      "name": "redis", 
      "plan": "hobby"
    }
  ]
}
