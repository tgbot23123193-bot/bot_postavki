# REDIS CONFIGURATION (Опционально - если нет Redis, будет использоваться память)
REDIS_URL=redis://localhost:6379/0
REDIS_ENCODING=utf-8
REDIS_DECODE_RESPONSES=true

# SECURITY CONFIGURATION (ОБЯЗАТЕЛЬНО!)
SECURITY_ENCRYPTION_KEY=your_32_character_encryption_key_here_ok
SECURITY_JWT_SECRET=your_jwt_secret_key_here_also_ok

# APPLICATION CONFIGURATION
ENVIRONMENT=development
DEBUG=true

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FORMAT=json

# WILDBERRIES API CONFIGURATION
WB_BASE_URL=https://suppliers-api.wildberries.ru
WB_TIMEOUT=30
WB_MAX_RETRIES=3
WB_RATE_LIMIT_DELAY=60

# MONITORING CONFIGURATION
MONITORING_DEFAULT_INTERVAL_SEC=30
MONITORING_MAX_API_KEYS_PER_USER=5
