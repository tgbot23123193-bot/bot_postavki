# WB Auto-Booking Bot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TG_BOT_TOKEN=your_bot_token_from_botfather
TG_WEBHOOK_URL=https://your-domain.com
TG_WEBHOOK_SECRET=your_webhook_secret_token
TG_ADMIN_IDS=123456789,987654321

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=secure_database_password_change_me
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_ENCRYPTION_KEY=your_32_char_encryption_key_change_this
SECURITY_JWT_SECRET=your_jwt_secret_key_change_this

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_MIN_CHECK_INTERVAL=30
MONITORING_MAX_CHECK_INTERVAL=1
MONITORING_CACHE_TTL=5
MONITORING_MAX_CONCURRENT_REQUESTS=1000

# =============================================================================
# WILDBERRIES API CONFIGURATION
# =============================================================================
WB_BASE_URL=https://suppliers-api.wildberries.ru
WB_TIMEOUT=30
WB_MAX_RETRIES=3
WB_RATE_LIMIT_DELAY=60

# =============================================================================
# MONITORING TOOLS (OPTIONAL)
# =============================================================================
GRAFANA_PASSWORD=admin
