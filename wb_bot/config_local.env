# WB Auto-Booking Bot Configuration

# TELEGRAM BOT CONFIGURATION
TG_BOT_TOKEN=test_token_for_development
TG_WEBHOOK_URL=
TG_WEBHOOK_SECRET=
TG_ADMIN_IDS=

# DATABASE CONFIGURATION (SQLite for local development)
DB_URL=sqlite+aiosqlite:///./bot_database.db
DB_ECHO=false

# REDIS CONFIGURATION (Optional - will use in-memory if not available)
REDIS_URL=redis://localhost:6379/0

# SECURITY CONFIGURATION
SECURITY_ENCRYPTION_KEY=your_32_character_encryption_key_change_this_please
SECURITY_JWT_SECRET=your_jwt_secret_key_change_this_too

# APPLICATION CONFIGURATION
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=text

# MONITORING CONFIGURATION
MONITORING_MIN_CHECK_INTERVAL=30
MONITORING_MAX_CHECK_INTERVAL=1
MONITORING_CACHE_TTL=5
MONITORING_MAX_CONCURRENT_REQUESTS=100

# WILDBERRIES API CONFIGURATION
WB_BASE_URL=https://suppliers-api.wildberries.ru
WB_TIMEOUT=30
WB_MAX_RETRIES=3
WB_RATE_LIMIT_DELAY=60
